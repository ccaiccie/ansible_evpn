---
# tasks file for evpn_build_spine

  - name: Import host-specific facts from a XLS file
    xls_to_facts:
      src: "evpn_config_template.xlsx" 

#  - name: Optionally display the facts
#    debug: var=spreadsheet

  - name: Render switch global configuration commands 
    template:
      src: spine_global.j2
      dest: "{{configuration_file.type}}"

  - name: Create a backup (checkpoint) of the current running configuration 
    nxos_rollback:
      checkpoint_file: ansible-"{{ day }}"-"{{ hr }}""{{ min }}""{{ sec }}".cfg
      provider: "{{ cli }}"

  - name: SSH to devices and turn on NXAPI
    nxos_config:
      provider: "{{ cli }}"
      lines: feature nxapi    

  - name: Send configuration commands from file to switch
    nxos_config:
      provider: "{{ nxapi }}"
#      use_ssl: yes
#      validate_certs: False
      src: "{{configuration_file.type}}"
    register: result

  - name: Display the result of the task
    debug: var=result verbosity=0

  - name: Notify users of configuration change
    when: "{{ result['changed'] }}"
    nxos_command:
      provider: "{{ nxapi }}"
      commands: send * Configured by Ansible role {{role}} on {{ansible_date_time.date}} {{ansible_date_time.time}}


